<div class='clients-page'>
  <div class='form'>
    <h2>Edit Client</h2>
    <%= render 'form' %>
    <div class='mt-4'>
      <%= link_to 'Back', client_path(@client, location: @location_param) %>
    </div>
    <%= button_to 'Delete Client', client_path(location: @location_param), { onclick: "return confirm('Are you sure you want to delete this client?')", method: :delete, class: 'delete-btn' } %>
  </div>
</div>