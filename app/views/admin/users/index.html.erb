<div class="user-page">
  <div class="center">
    <h1>Users</h1>

    <% @users.each do |user| %>
      <div class="card card-body mb-3">
        <div>
          <%= link_to user.full_name, edit_admin_user_path(user) %>
        </div>
        <div>
          <%= user.email %>
        </div>
        <div>
          <%= user.location %>
        </div>
        <div>
          <%= user.account_type %>
        </div>
      </div>
    <% end %>

    <%= link_to 'New User', new_user_invitation_path %> 
  </div>
</div>

