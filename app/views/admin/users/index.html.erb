<div class="users-page">
  <div class="center">
    <div class="container">
      <div class="user-header">
        <h1>Users</h1>
        <%= form_tag(admin_users_path, method: :get) do %>
          <%= select_tag :location, options_for_select(User::LOCATIONS, selected: params[:location]), onchange: 'this.form.submit();' %>
        <% end %>
      </div>
      <div class="user-details">
        <% @users.each do |user| %>
          <div class="card card-body mb-3">
            <div class="user-name">
              <%= link_to user.full_name, edit_admin_user_path(user) %>
              <div class="user-text">edit user</div>
            </div>
            <div class="user-email">
              <%= user.email %>
              <div class="user-text">email</div>
            </div>
            <div class="user-location">
              <%= user.location %>
              <div class="user-text">location</div>
            </div>
            <div class="user-account">
              <%= user.account_type %>
              <div class="user-text">account</div>
            </div>
          </div>
        <% end %>
        <div class="space-between">
          <div class="pagination">
            <%= will_paginate @users, previous_label: "Prev", next_label: "Next" %>
          </div>
          <div class="center-item">
            <%= link_to "Create New User", new_user_invitation_path, class: "btn-primary new-user-btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

