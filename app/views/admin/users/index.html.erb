<div class="users-page">
  <div class="center">
    <h1>Users</h1>
    <div class="new-user">
      <%= link_to 'Create New User', new_user_invitation_path, class: "btn-primary" %>
    </div>
    <div class="container">
      <% @users.each do |user| %>
        <div class="card card-body mb-3">
          <div class="user-name">
            <%= link_to user.full_name, edit_admin_user_path(user) %>
            <div class="user-text">edit user</div>
          </div>
          <div class="user-email">
            <%= user.email %>
            <div class="user-text">email</div>
          </div>
          <div class="user-location">
            <%= user.location %>
            <div class="user-text">location</div>
          </div>
          <div class="user-account">
            <%= user.account_type %>
            <div class="user-text">account</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

