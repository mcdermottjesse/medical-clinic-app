 <div class="login-page"> 
    <div class="login-dark">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %> 
        <%# set turbo false to display login error messages %>
        
        <div class="illustration"><i class="bi bi-shield-lock"></i></div>

        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        </div>

        <div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="d-flex justify-content-center mb-3">
          <%= f.submit "Log in", class: 'btn-primary'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>