<% if @user.errors.any? %>
  <div class="center-item">
    <div class="alert alert-danger"><%= @user.errors.full_messages.join(", ") %></div>
  </div>
<% end %>

<div class="login-page center"> 
  <div class="login-container">
    <h5 class="mb-4">Change your password</h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="change-password">
        <b><%= f.label :password, "New password", class: "mb-3" %></b>
        <em> 
          <ul>
            <li><%= I18n.t("activerecord.errors.models.user.attributes.password.validation_message") %></li>
            <li> <%= @minimum_password_length %> characters minimum </li>
            <li> 16 characters maximum </li>
          </ul>
        </em>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  class: "form-control" %>
      </div>

      <div class="change-password">
      <b><%= f.label :password_confirmation, "Confirm new password", class: "mb-3" %></b>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %>
      </div>

      <div>
        <%= f.submit "Change my password", class: "btn-primary mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
