<div class="users-page">
  <div class="new-user">
    <h2 class="mb-3"><%= t "devise.invitations.new.header" %></h2>

    <%= form_for(@user, as: resource_name, url: invitation_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>

      <% resource.class.invite_key_fields.each do |field| -%>
          <div>
            First Name
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
          <div>
            Last Name 
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div>
            Email
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div>
            Account Type
            <%= f.select :account_type, options_for_select(User::ACCOUNTS)%>
          </div>
          <div>
            Location
            <%= f.select :location, options_for_select(User::LOCATIONS)%>
          </div>
        <% end -%>

      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button") %>
      </div>
    <% end %>
  </div>
</div>

