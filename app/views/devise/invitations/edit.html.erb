<% if @user.errors.any? %>
  <div class="alert alert-danger"><%= @user.errors.full_messages.join(", ") %></div>
<% end %>

<div class="users-page center">
  <div class="user-form">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control mb-0" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
